<html>
    <head>
        <% include includes/globalcsshtml.ejs %>

        <!-- Page Specific JS + CSS  -->
        <link rel="stylesheet" type="text/css" href="/css/search.css">
        <title>Skinny Sip - Ingredient</title>
    </head>
    <body>
        <% include includes/header.ejs %>

        <!-- Body -->
        <div class="container" id="resultContainer">
            <h1 style="margin: unset;"><%=ingredient%></h1>
            <i><%=subName%></i>
            <div class="row">
                <div class="col-3">
                    <img style="max-width: 255px" src="https://skinysipblobstorage.blob.core.windows.net/images/Ingredient_<%= id %>_med.png" class="d-block mx-auto" onerror="this.onerror=null; this.src='/img/noImage.png'" />
                </div>
                <div class="col-9">
                    <p><%=desc%></p>
                </div>
            </div>
            <h3>Drinks that contain this ingredient</h3>
            <% if (!drinks.length) {%>
                <div id="noResults"><p>Nothing Found :(</p></div>
            <%}%>
            <% for(let c of drinks) {%>
                <a id="resultTemplate" class="result" href="/Drink?id=<%=c.idDrink%>">
                    <img src="https://skinysipblobstorage.blob.core.windows.net/images/Recipe_<%= c.idDrink %>.jpg" />
                    <div>
                        <h4><%=c.strDrink%></h4>
                        <p><i><%=c.strDrink%></i></p>
                    </div>
                </a>
            <%}%>
        </div>
        <!-- Footer -->
        <footer class="footer bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <a href="/Search">Search cocktails</a>
                            </li>
                            <li class="list-inline-item">&sdot;</li>
                            <li class="list-inline-item">
                                <a href="/Random">Random cocktail</a>
                            </li>
                            <li class="list-inline-item">&sdot;</li>
                            <li class="list-inline-item">
                                <a href="/About">About + credits</a>
                            </li>
                        </ul>
                        <p class="text-muted small mb-4 mb-lg-0">&copy; Zachary Murray 2019. All Rights Reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
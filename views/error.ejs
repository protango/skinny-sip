<html>
    <head>
        <% include includes/globalcsshtml.ejs %>

        <!-- Page Specific JS + CSS  -->
        <link rel="stylesheet" type="text/css" href="/css/error.css">
        <title>Skinny Sip - Error</title>
    </head>
    <body>
        <% include includes/header.ejs %>

        <!-- Body -->
        <div class="container" id="resultContainer">
            <h1>Error</h1>
            <p>
                We're sorry, but your request couldn't be fulfilled, please try again later
                <% if (locals.error != null) { %>
                    <br /><br /><b>Details: </b><br /><%- error.replace("\n", "<br>") %>
                <% } %>
            </p>
            <h5>Service Status:</h5>

            <p class="<%= cocktaildbOnline ? "success" : "fail" %>">
                <i class="fas fa-<%= cocktaildbOnline ? "check" : "times" %>-circle"></i> 
                Cocktail DB is <%= cocktaildbOnline ? "online" : "offline" %>
            </p>
            <p class="<%= nutritionixOnline ? "success" : "fail" %>">
                <i class="fas fa-<%= nutritionixOnline ? "check" : "times" %>-circle"></i> 
                Nutritionix is <%= nutritionixOnline ? "online" : "offline" %>
            </p>
            
        </div>
        <!-- Footer -->
        <footer class="footer bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                        <ul class="list-inline mb-2">
                            <li class="list-inline-item">
                                <a href="/Search">Search cocktails</a>
                            </li>
                            <li class="list-inline-item">&sdot;</li>
                            <li class="list-inline-item">
                                <a href="/Random">Random cocktail</a>
                            </li>
                            <li class="list-inline-item">&sdot;</li>
                            <li class="list-inline-item">
                                <a href="/About">About + credits</a>
                            </li>
                        </ul>
                        <p class="text-muted small mb-4 mb-lg-0">&copy; Zachary Murray 2019. All Rights Reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>